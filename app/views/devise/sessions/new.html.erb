<div class="user_registration">
  <h1>ログイン</h1>

  <div class="field_group">

  <%= form_with model: @user, url: user_session_path, local: true do |f| %>
  <%= render "shared/error_messages", locals:{model: @user}, model: f.object %>
    <div class="field">
      <%= f.label :email, class:"label_name" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"label_form" %>
    </div>

    <div class="field">
      <%= f.label :password, class:"label_name" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class:"label_form" %>
    </div>

    <div class="actions">
      <%= f.submit "ログイン",class:"form_box" %>
    </div>
  <% end %>
  </div>

<%= render "devise/shared/links" %>
</div>